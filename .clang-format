---
BasedOnStyle:  LLVM
AlignAfterOpenBracket: DontAlign
BreakBeforeBraces: Custom
IndentWidth:     8
SortIncludes:    false
UseTab: Always
BraceWrapping:
    AfterClass: true
    AfterControlStatement: true
    AfterEnum: true
    AfterFunction: true
    AfterExternBlock: false
    AfterNamespace: true
    AfterStruct: true
    BeforeCatch: true
    BeforeElse: true
